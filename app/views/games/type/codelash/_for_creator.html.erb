<div id="game-content">
  <% if @game.current_round.game_object.pending? %>
    <p class="lead">
      Check your device
    </p>

    <p class="lead">
      Answer your questions with the funniest answer you can come up with
    </p>

    <p class="lead">
      Remember to answer both questions
    </p>
  <% elsif @game.current_round.game_object.voting? %>
    <%= javascript_tag do %>
      $(function() {
        Round.current.render();
      });
    <% end %>
  <% end %>
</div>

<script type="text/x-tmpl" id="tmpl-codelash-vote">
  <div class="row">
    <div class="col-xs-12">
      <p class="lead">
        {%= o.roundData.question %}
      </p>
    </div>

    <div class="col-xs-6">
      <p class="well lead">
        {%= o.data.answers[0] %}
      </p>
    </div>

    <div class="col-xs-6">
      <p class="well lead">
        {%= o.data.answers[1] %}
      </p>
    </div>
  </div>
</script>

<script type="text/x-tmpl" id="tmpl-codelash-vote-results">
</script>
